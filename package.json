  "repository": {
    "type": "git",
    "url": "https://github.com/WongJingGitt/Mnemosyne.git"
  },
  "homepage": "https://github.com/WongJingGitt/Mnemosyne#readme",
  "bugs": {
    "url": "https://github.com/WongJingGitt/Mnemosyne/issues"
  },
  "files": [
    "src/",
    "scripts/",
    "README.md",
    "README_USAGE.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "sql.js": "^1.13.0"
